{
  "name": "contextvault-backend",
  "version": "1.0.0",
  "description": "Scalable conversational data storage and retrieval system with semantic search",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t contextvault-api .",
    "docker:run": "docker run -p 8000:8000 contextvault-api",
    "railway:deploy": "railway up",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "analyze": "npx madge --circular --extensions js src/",
    "security": "npm audit && npx audit-ci --config audit-ci.json"
  },
  "keywords": [
    "conversational-ai",
    "vector-search",
    "mongodb",
    "embeddings",
    "semantic-search",
    "chatgpt"
  ],
  "author": "ContextVault Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "redis": "^4.6.11",
    "bull": "^4.12.2",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "openai": "^4.20.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8",
    "madge": "^6.1.0",
    "audit-ci": "^6.6.1",
    "clinic": "^11.0.0",
    "autocannon": "^7.12.0"
  }
} 